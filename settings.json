{
  // EDITOR
  "editor.lineNumbers": "relative",
  "editor.scrollBeyondLastLine": false,
  "editor.cursorSurroundingLines": 8,
  "editor.smoothScrolling": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.scale": 1,
  "editor.fontSize": 16,
  "editor.lineHeight": 22,
  "editor.fontFamily": "Operator Mono Lig",
  "editor.accessibilitySupport": "off",
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "line",
  // VIM CORE
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": " ",
  "vim.sneak": true,
  "vim.smartRelativeLine": true,
  "vim.foldfix": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 200,
  "vim.searchHighlightColor": "rgba(180, 142, 173, 0.5)",
  // VIM STATUS BAR
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.normal": "#282c39",
  "vim.statusBarColors.insert": "#654h09",
  "vim.statusBarColors.visual": "#992c39",
  "vim.statusBarColors.visualline": "#c678dd",
  "vim.statusBarColors.visualblock": "#c678dd",
  "vim.statusBarColors.replace": "#e06c75",
  // VIM KEY HANDLING
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-u>": true,
    "<C-f>": false
  },
  // VIM INSERT MODE
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  // VIM NORMAL MODE
  "vim.normalModeKeyBindingsNonRecursive": [
    // BASIC
    {
      "before": [
        "<C-n>"
      ],
      "commands": [
        ":nohl"
      ]
    },
    // FOLDING
    {
      "before": [
        "<leader>",
        "z",
        "a"
      ],
      "commands": [
        "editor.foldAll"
      ]
    },
    {
      "before": [
        "<leader>",
        "z",
        "o"
      ],
      "commands": [
        "editor.unfoldAll"
      ]
    },
    {
      "before": [
        "<leader>",
        "z",
        "c"
      ],
      "commands": [
        "editor.fold"
      ]
    },
    // alt+shiftDOW MANAGEMENT
    {
      "before": [
        "<leader>",
        "w"
      ],
      "commands": [
        "workbench.action.splitEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "w",
        "w"
      ],
      "commands": [
        ":w"
      ]
    },
    {
      "before": [
        "<leader>",
        "w",
        "c"
      ],
      "commands": [
        "workbench.action.closeActiveEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "w",
        "q"
      ],
      "commands": [
        "workbench.action.revertAndCloseActiveEditor"
      ]
    },
    // SIDEBAR
    {
      // open file explorer
      "before": [
        "<leader>",
        "e"
      ],
      "commands": [
        "workbench.view.explorer"
      ]
    },
    // FILE OPERATIONS
    {
      "before": [
        "<leader>",
        "f",
        "y"
      ],
      "commands": [
        "copyFilePath"
      ]
    },
    {
      "before": [
        "<leader>",
        "f",
        "n"
      ],
      "commands": [
        "explorer.newFile"
      ]
    },
    {
      "before": [
        "<leader>",
        "f",
        "f"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    {
      "before": [
        "<leader>",
        "f",
        "g"
      ],
      "commands": [
        "workbench.action.findInFiles"
      ]
    },
    {
      "before": [
        "<leader>",
        "f",
        "b"
      ],
      "commands": [
        "workbench.action.showAllEditors"
      ]
    },
    // CODE ACTIONS
    {
      "before": [
        "<leader>",
        "g",
        "d"
      ],
      "commands": [
        "editor.action.revealDefinition"
      ]
    },
    {
      "before": [
        "<leader>",
        "c",
        "f"
      ],
      "commands": [
        "editor.action.formatDocument"
      ]
    },
    // NAVIGATION
    {
      "before": [
        "<C-o>"
      ],
      "commands": [
        "workbench.action.navigateBack"
      ]
    },
    {
      "before": [
        "<C-i>"
      ],
      "commands": [
        "workbench.action.navigateForward"
      ]
    },
    // HARPOON
    {
      "before": [
        "<leader>",
        "a"
      ],
      "commands": [
        "vscode-harpoon.addEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "h"
      ],
      "commands": [
        "vscode-harpoon.editorQuickPick"
      ]
    }
  ],
  // VIM VISUAL MODE
  "vim.visualModeKeyBindings": [
    {
      "before": [
        "<leader>",
        "a"
      ],
      "commands": [
        "editor.action.selectHighlights"
      ]
    },
    {
      "before": [
        "<leader>",
        "u"
      ],
      "commands": [
        "editor.action.transformToUppercase"
      ]
    },
    {
      "before": [
        "<leader>",
        "l"
      ],
      "commands": [
        "editor.action.transformToLowercase"
      ]
    }
  ],
  // MULTI-COMMAND
  "multiCommand.commands": [
    {
      "command": "multiCommand.toggleMaximizedPanelAndFocusTerminal",
      "sequence": [
        "workbench.action.toggleMaximizedPanel",
        "workbench.action.terminal.focus"
      ]
    },
    {
      "command": "multiCommand.closeAllBars",
      "sequence": [
        "workbench.action.closeSidebar",
        "workbench.action.closePanel",
        "workbench.action.closeAuxiliaryBar"
      ]
    },
    {
      "command": "multiCommand.closeAuxAndFocusEditor",
      "sequence": [
        "workbench.action.closeAuxiliaryBar",
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    {
      "command": "multiCommand.closeSideBarAndFocusEditor",
      "sequence": [
        "workbench.action.closeSidebar",
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    {
      "command": "multiCommand.closeTerminalAndFocusEditor",
      "sequence": [
        "workbench.action.closePanel",
        "workbench.action.focusActiveEditorGroup"
      ]
    }
  ],
  // APPEARANCE
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.tree.indent": 30,
  "alt+shiftdow.zoomLevel": 0.75,
  "workbench.colorCustomizations": {
    "statusBar.background": "#c678dd",
    "statusBar.noFolderBackground": "#c678dd",
    "statusBar.debuggingBackground": "#c678dd",
    "statusBar.foreground": "#ffffff",
    "statusBar.debuggingForeground": "#ffffff"
  },
  // FONT STYLING
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "storage.modifier",
          "storage.type.php",
          "keyword.other.new.php",
          "entity.other.attribute-name",
          "fenced_code.block.language.markdown",
          "keyword",
          "storage.type",
          "keyword.control",
          "constant.language",
          "entity.name.method",
          "keyword.control.import.ts",
          "keyword.control.import.tsx",
          "keyword.control.import.js",
          "keyword.control.flow.js",
          "keyword.control.from.js",
          "keyword.control.from.ts",
          "keyword.control.from.tsx"
        ],
        "settings": {
          "fontStyle": "italic",
        }
      },
      {
        "scope": [
          "entity.name.type.class"
        ],
        "settings": {
          "fontStyle": ""
        }
      },
      {
        "scope": [
          "entity.name.section.markdown"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json",
          "comment.block",
          "entity.other.attribute-name.class.css"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  // FORMATTERS
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // MISC
  "diffEditor.useInlineViewWhenSpaceIsLimited": false,
  "diffEditor.experimental.showMoves": true,
  "diffEditor.renderSideBySide": true,
  //
  "terminal.integrated.commandsToSkipShell": [
    "workbench.action.focusActiveEditorGroup",
    "workbench.action.focusSideBar",
    "multiCommand.closeSideBarAndFocusEditor",
    "workbench.action.focusAuxiliaryBar",
    "multiCommand.closeAuxAndFocusEditor",
    "workbench.action.terminal.toggleTerminal",
    "multiCommand.closeTerminalAndFocusEditor",
    "multiCommand.toggleMaximizedPanelAndFocusTerminal",
    "workbench.action.increaseViewSize",
    "workbench.action.decreaseViewSize",
    "workbench.action.increaseViewWidth",
    "workbench.action.decreaseViewWidth"
  ]
}