[
  // GLOBAL WORKSPACE NAVIGATION
  {
    "key": "ctrl+alt+1",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    "key": "ctrl+alt+2",
    "command": "workbench.action.focusSideBar"
  },
  {
    "key": "ctrl+alt+2",
    "command": "multiCommand.closeSideBarAndFocusEditor",
    "when": "sideBarFocus"
  },
  {
    "key": "ctrl+alt+3",
    "command": "workbench.action.focusAuxiliaryBar",
    "when": "!auxiliaryBarFocus"
  },
  {
    "key": "ctrl+alt+3",
    "command": "multiCommand.closeAuxAndFocusEditor",
    "when": "auxiliaryBarFocus"
  },
  {
    "key": "ctrl+alt+4",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+alt+4",
    "command": "multiCommand.closeTerminalAndFocusEditor",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+alt+0",
    "command": "multiCommand.closeAllBars"
  },

  // VIM EDITOR GROUP NAVIGATION
  {
    "key": "ctrl+h",
    "command": "workbench.action.focusLeftGroup",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusRightGroup",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.focusAboveGroup",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.focusBelowGroup",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },

  // QUICK EDITOR GROUP NAVIGATION
  {
    "key": "ctrl+1",
    "command": "workbench.action.focusFirstEditorGroup"
  },
  {
    "key": "ctrl+2",
    "command": "workbench.action.focusSecondEditorGroup"
  },

  // SUGGESTIONS AND AUTOCOMPLETION
  {
    "key": "ctrl+n",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetVisible"
  },
  {
    "key": "ctrl+p",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetVisible"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.quickOpenSelectNext",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.quickOpenSelectPrevious",
    "when": "inQuickOpen"
  },

  // PROBLEM NAVIGATION
  {
    "key": "F8",
    "command": "editor.action.marker.nextInFiles",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+alt+F8",
    "command": "editor.action.marker.prevInFiles",
    "when": "editorFocus"
  },

  // FILE EXPLORER
  {
    "key": "ctrl+enter",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  {
    "key": "enter",
    "command": "-renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  {
    "key": "enter",
    "command": "list.select",
    "when": "listFocus && !inputFocus"
  },

  // TAB MANAGEMENT
  {
    "key": "alt+[",
    "command": "workbench.action.previousEditor"
  },
  {
    "key": "alt+]",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "alt+\\",
    "command": "workbench.action.showAllEditors"
  },

  // TERMINAL
  {
    "key": "ctrl+;",
    "command": "workbench.action.terminal.focus"
  },
  {
    "key": "ctrl+;",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+alt+;",
    "command": "multiCommand.toggleMaximizedPanelAndFocusTerminal"
  },

  // PANE RESIZING
  {
    "key": "ctrl+alt+up",
    "command": "workbench.action.increaseViewSize"
  },
  {
    "key": "ctrl+alt+down",
    "command": "workbench.action.decreaseViewSize"
  },
  {
    "key": "ctrl+alt+left",
    "command": "workbench.action.increaseViewWidth"
  },
  {
    "key": "ctrl+alt+right",
    "command": "workbench.action.decreaseViewWidth"
  }
]
